/* pages/music-list-detail/music-list-detail.wxss */


#ctrl-bar{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 20rpx;
    background-color: #eee;
}

.star-icon{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
}

.fav-num{
    vertical-align: middle;
    margin-left: 10rpx;
    font-size: 36rpx;
    color: #666;
}

.play-all-btn{
    color: rgb(39, 119, 224);
    padding: 20rpx;
}


.music-list-item{
    display: flex;
    justify-content: space-between;
    border-bottom: solid 1rpx #999;
    padding: 32rpx 16rpx;
    color: #707070;
}

.play-icon{
    width: 80rpx;
    height: 80rpx;
}

.m-title{
    display: flex;
    align-items: center;
}

.m-name-artists{
    margin-left: 16rpx;

}

.m-name{
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
}


.m-cd{
    width: 80rpx;
    height: 80rpx;
    vertical-align: middle;
}